{
  "name": "oneago/oneago-php-template",
  "description": "Basic structure for php projects used by Oneago",
  "type": "library",
  "keywords": ["oneago", "php", "basic", "template", "project", "sass", "docker", "framework", "sass"],
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "jruedaq",
      "email": "jrueda@oneago.com",
      "homepage": "https://www.juandavid.dev",
      "role": "Developer"
    },
    {
      "name": "Oneago",
      "email": "support@oneago.com",
      "homepage": "https://www.oneago.com/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "twig/twig": "^3.1",
    "symfony/twig-bridge": "^5.1",
    "robmorgan/phinx": "^0.12.4",
    "vlucas/phpdotenv": "^5.2",
    "oneago/ada-console": "^1.0",
    "php": ">=7.4",
    "ext-mysqli": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "fakerphp/faker": "^1.12.0",
    "filp/whoops": "^2.9",
    "phpunit/phpunit": "^9.4",
    "symfony/console": "^5.1"
  },
  "autoload": {
    "psr-4": {
      "App\\Config\\": "config/",
      "App\\Controllers\\": "controllers/",
      "App\\Middlewares\\": "middlewares/",
      "App\\Models\\": "models/",
      "App\\Bases\\": "bases/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@postInstall"
    ],
    "postInstall": [
      "php postinit"
    ]
  }
}
