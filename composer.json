{
  "name": "oneago/oneago-php-template",
  "description": "Basic structure for php projects used by Oneago",
  "type": "project",
  "keywords": [
    "oneago",
    "php",
    "basic",
    "template",
    "project"
  ],
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "jruedaq",
      "email": "jrueda@oneago.com",
      "homepage": "https://www.juandavid.dev",
      "role": "Developer"
    },
    {
      "name": "Oneago",
      "email": "support@oneago.com",
      "homepage": "https://www.oneago.com/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "twig/twig": "^3.0",
    "robmorgan/phinx": "^0.12.4",
    "vlucas/phpdotenv": "^5.2",
    "filp/whoops": "^2.7",
    "phpunit/phpunit": "^9.3",
    "php": ">=7.1",
    "ext-mysqli": "*",
    "ext-curl": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "symfony/console": "^5.1",
    "fzaninotto/faker": "^1.9"
  },
  "autoload": {
    "psr-4": {
      "App\\Config\\": "config/",
      "App\\Controllers\\": "controllers/",
      "App\\Middlewares\\": "middlewares/",
      "App\\Models\\": "models/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Commands\\": "commands/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@postInstall"
    ],
    "postInstall": [
      "php postinit"
    ]
  }
}
